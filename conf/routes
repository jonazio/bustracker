# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                                       controllers.Application.index()
GET        /showlines                              controllers.Application.getAllLines()
GET        /getAllPositions                        controllers.Application.getAllPositions()
GET        /jmstest                                controllers.Application.jmsTest()
GET        /getCheckpoints                         controllers.Application.getAllCheckpoints()
GET        /getVehiclesByLineId                    controllers.Application.getVehiclesforLineId(lineId: Long ?= 0)
GET        /getVehiclesByLineCode                  controllers.Application.getVehiclesforLineCode(lineCode: Long ?=0 )

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)
